{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Adilson Junior <aj.adilsonjunior1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/src/index.js",
    "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts --ignore ./__tests__",
    "test:unit": "jest",
    "test:functional": "jest --projects ./__tests__ --runInBand",
    "lint": "eslint ./src ./__tests__ --ext .ts",
    "lint:fix": "eslint ./src ./__tests__ --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "axios": "^0.20.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2"
  }
}
