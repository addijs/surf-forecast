  "scripts": {
    "build": "tsc",
    "start": "node ./dist/src/server.js",
    "dev": "dotenv -e .env -- tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts --ignore ./__tests__ | pino-pretty -c",
    "test": "yarn lint && yarn style:check && yarn test:unit && yarn test:functional",
    "test:unit": "jest",
    "test:functional": "jest --projects ./__tests__ --runInBand",
    "lint": "eslint ./src ./__tests__ --ext .ts",
    "lint:fix": "eslint ./src ./__tests__ --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.36",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.161",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.7.36",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.11.2",
    "@types/pino": "^6.3.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.4.2",
    "nock": "^13.0.4",
    "pino-pretty": "^4.2.1",
    "prettier": "^2.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-rate-limit": "^5.1.0",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "config": "^3.3.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
